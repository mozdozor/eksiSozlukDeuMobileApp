<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:onClick="goRegisterPage"
        app:cardBackgroundColor="#E4DAB9"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="416dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textCommentArea"
                android:layout_width="383dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="TextView"
                android:textColor="#0B0A0A"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="43dp"
                android:layout_height="52dp"
                android:layout_marginStart="355dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textCommentArea"
                app:srcCompat="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/usernameTextArea"
                android:layout_width="170dp"
                android:layout_height="27dp"
                android:layout_marginStart="168dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textCommentArea" />

            <TextView
                android:id="@+id/dateTextArea"
                android:layout_width="128dp"
                android:layout_height="27dp"
                android:layout_marginStart="210dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="#040404"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/usernameTextArea" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>