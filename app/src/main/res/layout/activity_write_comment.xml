<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECD8BC"
    tools:context=".WriteCommentActivity">

    <EditText
        android:id="@+id/makeCommentText"
        android:layout_width="383dp"
        android:layout_height="320dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="256dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:hint="Write your subject name "
        android:inputType="textMultiLine"
        android:lines="10"
        android:overScrollMode="always"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:singleLine="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="412dp"
        android:layout_height="109dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_corner"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="337dp"
        android:layout_height="59dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="32dp"
        android:text="Write comment to this article"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button11"
        android:layout_width="201dp"
        android:layout_height="52dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="624dp"
        android:onClick="saveCommentToDatabase"
        android:text="Save my comment"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ProgressBar
        android:id="@+id/progressBarAddComment"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="340dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>